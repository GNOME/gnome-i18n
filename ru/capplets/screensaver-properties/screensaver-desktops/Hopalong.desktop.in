[Desktop Entry]
Name=_("Hopalong")
Comment=_("Draws real plane fractals")
Exec=xscreensaver-command -activate
TryExec=hopalong
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=hopalong.png
Author=Patrick J. Naughton <naughton@eng.sun.com>
ExtendedComment=_("Hopalong generates real plan fractals.")
Demo=hopalong -delay 2

[Arg0]
Name=_("Colors")
Type=NRange
LeftLabel=_("Colors:")

Flag=-ncolors
ValType=I[1-256]=200
Label=_("Number of Colors.")

Comment=_("Change the number of colors to use.")

[Arg1]
Name=_("Cycles")
Type=LRange
Flag=-cycles
LeftLabel=_("Faster")

RightLabel=_("Slower")

ValType=I[1-500000]=2500
Label=_("Speed of Motion.")

Comment=_("Change the delay in cycles.")

[Arg2]
Name=_("Count")
Type=LRange
LeftLabel=_("Less")

RightLabel=_("More")

Flag=-count
ValType=I[10-10000]=1000
Label=_("Number of pixels before a color change.")

Comment=_("Change the number of pixels before a color change.")

[Arg3]
Name=_("Monochrome")
Type=Check
Flag=-mono
Flag2=
LeftLabel=_("Display screensaver in monochrome.")

Comment=_("Change to display in monochrome.")