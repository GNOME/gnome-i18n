[Desktop Entry]
Name=_("Forest")
Comment=_("Draws a fractal forest.")
Exec=xscreensaver-command -activate
TryExec=forest
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=forest.png
Author=Pascal Pensa <pensa@aurora.unice.fr>
ExtendedComment=_("Fractal draws a fractal forest.")
Demo=forest -delay 2

[Arg0]
Name=_("Colors")
Type=NRange
LeftLabel=_("Colors:")

Flag=-ncolors
ValType=I[1-256]=100
Label=_("Number of Colors.")

Comment=_("Change the number of colors to use.")

[Arg1]
Name=_("Cycles")
Type=LRange
Flag=-cycles
LeftLabel=_("Faster")

RightLabel=_("Slower")

ValType=I[1-500000]=2
Label=_("Delay between redraws.")

Comment=_("Change the delay in cycles.")

[Arg2]
Name=_("Count")
Type=NRange
LeftLabel=_("Count:")

Flag=-count
ValType=I[1-1000]=100
Label=_("Number of trees to use.")

Comment=_("Change the number of trees to use.")

[Arg3]
Name=_("Monochrome")
Type=Check
Flag=-mono
Flag2=
LeftLabel=_("Display screensaver in monochrome.")

Comment=_("Change to display in monochrome.")