[Desktop Entry]
Name=_("Lightning")
Comment=_("Draws fractal lightning bolts.")
Exec=xscreensaver-command -activate
TryExec=lightning
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=lightning.png
Author=Keith Romberg <kromberg@saxe.com>
ExtendedComment=_("Lightning draws fractal lightning bolts.")
Demo=lightning -delay 2

[Arg0]
Name=_("Colors")
Type=NRange
LeftLabel=_("Colors:")

Flag=-ncolors
ValType=I[1-256]=100
Label=_("Number of Colors.")

Comment=_("Change the number of colors to use.")

[Arg1]
Name=_("Monochrome")
Type=Check
Flag=-mono
Flag2=
LeftLabel=_("Display screensaver in monochrome.")

Comment=_("Change to display in monochrome.")